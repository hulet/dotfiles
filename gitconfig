[alias]
    co = checkout
    ci = commit
    dt = difftool
    dts = difftool --staged
    st = status
    br = branch
    hist = log -n 15 --all --pretty=format:\"%C(auto)%h %ad | %s%d [%an]\" --graph --date=short
    changed = log -n 15 --all --graph --pretty=format:'%s%d'
    type = cat-file -t
    dump = cat-file -p
    lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
    #wipe = "!git reset --hard;git clean -fd"
[color]
    ui = auto
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
    # http://stackoverflow.com/a/18781512/51928
    pager = less -S
    filemode = false
    editor = nvim
[diff]
    algorithm = histogram
    tool = nvimdiff
[init]
	defaultBranch = main
[merge]
    # Shows the common ancestor in conflict markers (crucial for context)
    conflictstyle = zdiff3
[pull]
	rebase = true
[push]
    autoSetupRemote = true
    default = simple
[rebase]
	autoStash = true
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[include]
    path = ~/.gitconfig.local
